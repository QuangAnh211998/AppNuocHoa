<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/anh1"/>
    <ImageButton
        android:id="@+id/btnback"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutname"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/logo">
        <EditText
            android:id="@+id/name"
            android:textColor="#757575"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email/Số điện thoại" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutpassword"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/layoutname"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/pass"
            android:textColor="#757575"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"/>
    </com.google.android.material.textfield.TextInputLayout>
    
    <ProgressBar
        android:id="@+id/loading"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutpassword"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dangnhap"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/buttonmua"
        android:text="Đăng Nhập"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/loading"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@id/dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linear"
            android:layout_alignTop="@+id/linear"
            android:layout_weight="6"
            android:background="@color/colorWhite"
            android:gravity="right|center"
            android:text="Chưa có tài khoản,"
            android:textColor="#757575" />


        <TextView
            android:id="@+id/tvdangky"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorReb"
            android:gravity="left|center"
            android:text="tạo tài khoản" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:id="@+id/textview"
        android:layout_below="@+id/linear"
        android:text="Hoặc đăng nhập với"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/textview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/facebook"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/iconfacebook"
                android:layout_margin="2dp"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#3F51B5"
                android:textSize="25dp"
                android:text="Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/spinner"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/icongoogle"
                android:layout_margin="2dp"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#d50000"
                android:textSize="25dp"
                android:text="Google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>