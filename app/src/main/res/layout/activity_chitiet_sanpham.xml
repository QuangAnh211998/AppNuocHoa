<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Javaclass.ChitietSanpham">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarctsp"
        app:title="Chi tiết sản phẩm"
        android:background="#2979ff"
        app:titleTextColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imganhchtsp"
            android:src="@mipmap/ic_launcher_round"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"
            android:layout_width="180dp"
            android:layout_height="250dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tenctsp"
                android:textSize="16dp"
                android:text="Ten san pham"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/loaisp"
                android:textSize="17dp"
                android:text="Loai san pham"
                android:textColor="#201E1E"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/xuatxu"
                android:textSize="17dp"
                android:text="Xuất xứ"
                android:textColor="#201E1E"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/huong"
                android:textSize="17dp"
                android:text="Hương"
                android:textColor="#201E1E"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/giactsp"
                android:textSize="17dp"
                android:text="Giá"
                android:textStyle="bold"
                android:textColor="@color/colorReb"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinerctsp"
                    android:background="@drawable/spinner"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingLeft="45dp"
                    android:textAlignment="center"
                    android:layout_width="120dp"
                    android:layout_height="35dp"/>
            <Button
                android:id="@+id/themgiohang"
                android:text="Thêm vào giỏ hàng"
                android:layout_margin="2dp"
                android:background="@drawable/button"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="20dp"
        android:text="Mô Tả :"
        android:textColor="#2962ff"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ScrollView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/motasp"
                android:text="Sản phẩm rất tốt"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:textColor="#424242"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
</LinearLayout>